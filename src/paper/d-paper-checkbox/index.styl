    -webkit-transform rotate(45deg)
    top 13px
    left 5px
    width 4px
    height 4px

  100%
    -webkit-transform rotate(0deg)
    top 0px
    left 0px
    width 18px
    height 18px


@keyframes box-expand
  0%
    transform rotate(45deg)
    top 13px
    left 5px
    width 4px
    height 4px

  100%
    transform rotate(0deg)
