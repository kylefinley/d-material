.d-paper-checkbox 
  display inline-block
  white-space nowrap
  .checkbox-container
    position relative
    width 18px
    height 18px
    cursor pointer
    -webkit-transform translateZ(0)
    transform translateZ(0)
    &.labeled
      display inline-block
      vertical-align middle
  .checkbox
    position absolute
    box-sizing border-box
    top 0px
    left 0px
    width 18px
    height 18px
    border solid 2px
    border-color #5a5a5a
    pointer-events none
  .d-paper-ripple
    position absolute
    top -29px
    left -29px
    width 76px
    height 76px
    color #5a5f5a
  /* label */
  .checkbox-label
    position relative
    display inline-block
    vertical-align middle
    padding-left 8px
    white-space normal
    pointer-events none
    &.hidden
      display none

  &:focus
    outline none
  /* disabled state */
  &.disabled
    pointer-events none
    .checkbox
      border-color #eaeaea !important
  &.unchecked
      &.checkmark
        .checkbox
          -webkit-transform rotate(45deg)
          transform rotate(45deg)
          border-left none
          border-top none
          -webkit-animation checkmark-shrink 140ms ease-out forwards
          animation checkmark-shrink 140ms ease-out forwards
      &.box
        .checkbox
          -webkit-animation box-expand 140ms ease-out forwards
          animation box-expand 140ms ease-out forwards


  &.checked
    .d-paper-ripple
      color #0f9d58
    /* checkbox checked animations */
    .checkbox
      -webkit-transform rotate(45deg)
      transform rotate(45deg)
      top -4px
      left 6px
      width 10px
      height 21px
      border-top none
      border-left none
      border-right-width 2px
      border-bottom-width 2px
      border-color #0f9d58
    &.box
      .checkbox
        border solid 2px
        -webkit-animation box-shrink 140ms ease-out forwards
        animation box-shrink 140ms ease-out forwards
    &.checkmark
      .checkbox
        border-left none
        border-top none
        -webkit-animation checkmark-expand 140ms ease-out forwards
        animation checkmark-expand 140ms ease-out forwards


@-webkit-keyframes box-shrink
  0%
    -webkit-transform rotate(0deg)
    top 0px
    left 0px
    width 18px
    height 18px

  100%
    -webkit-transform rotate(45deg)
    top 13px
    left 5px
    width 4px
    height 4px


@keyframes box-shrink
  0%
    transform rotate(0deg)
    top 0px
    left 0px
    width 18px
    height 18px

  100%
    transform rotate(45deg)
    top 13px
    left 5px
    width 4px
    height 4px


@-webkit-keyframes checkmark-expand
  0%
    -webkit-transform rotate(45deg)
    top 13px
    left 5px
    width 4px
    height 4px

  100%
    -webkit-transform rotate(45deg)
    top -4px
    left 6px
    width 10px
    height 21px
    border-right-width 2px
    border-bottom-width 2px


@keyframes checkmark-expand
  0%
    transform rotate(45deg)
    top 13px
    left 5px
    width 4px
    height 4px

  100%
    transform rotate(45deg)
    top -4px
    left 6px
    width 10px
    height 21px
    border-right-width 2px
    border-bottom-width 2px


@-webkit-keyframes checkmark-shrink
  0%
    top -4px
    left 6px
    width 10px
    height 21px
    border-right-width 2px
    border-bottom-width 2px

  100%
    top 13px
    left 5px
    width 4px
    height 4px


@keyframes checkmark-shrink
  0%
    top -4px
    left 6px
    width 10px
    height 21px
    border-right-width 2px
    border-bottom-width 2px

  100%
    top 13px
    left 5px
    width 4px
    height 4px


@-webkit-keyframes box-expand
